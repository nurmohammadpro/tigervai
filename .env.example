# ==============================================
# TIGER VAI - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# MONGODB
# ==============================================
MONGODB_URL=mongodb://mongodb:27017/tiger-vai

# ==============================================
# MINIO (S3-Compatible Storage)
# ==============================================
MINIO_URL=http://minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_secure_minio_password_here

# ==============================================
# JWT TOKENS (CHANGE THESE!)
# ==============================================
ACCESS_TOKEN=your_random_access_token_here
REFRESH_TOKEN=your_random_refresh_token_here

# ==============================================
# MEILISEARCH
# ==============================================
MELISEACH_URL=http://meilisearch:7700
MELISEACH_TOKEN=your_secure_meilisearch_key_here

# ==============================================
# GOOGLE OAUTH
# ==============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here

# ==============================================
# META PIXEL (Optional)
# ==============================================
META_ACCESS_TOKEN=your_meta_access_token_here
META_PIXEL_ID=your_meta_pixel_id_here

# ==============================================
# NODE ENVIRONMENT
# ==============================================
NODE_ENV=production
